<% include _layouts/header %>

    <div class="row">
        <h1 class="page-header">
            <%= p.title %>
        </h1>

        <div class="col-xs-12 col-md-3">
            <img class="spi" src="/product_images/<%= p.id %>/<%= p.imag %>" alt="">
            <br>
        </div>
        <div class="col-xs-12 col-md-7">
            <p>
                <%= product.description %>
            </p>
            <p>
                <%= parseFloat(product.price).toFixed(2) %>
            </p>
            <p>
                <a href="/cart/add/<%= p.slug %>">Add to cart</a>
            </p>
        </div>
        <div class="col-xs-12">
            <ul class="gallery">
                <% galleryImages.forEach(function(image){ %>
                    <% if (image != "thumbs") { %>
                        <li>
                            <a data-fancybox="gallery" href="/product_images/<%= product.id %>/gallery/<%= image %>">
                                <img src="/product_images/<%= product.id %>/thumbs/<%= image %>" alt="">
                            </a>
                        </li>
                    <% } %>
                <% }) %>
            </ul>
        </div>

    </div>


    <% include _layouts/footer %>